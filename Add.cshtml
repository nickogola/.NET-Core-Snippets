@model [custom].Add.Command
@{
    Layout = null;
}

<form method="post" asp-action="Add">
    <div class="modal-header blg-modal-header card-header">
        <h5 class="modal-title"><i class="fas fa-user"></i> Add User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            <div class="col-md-12">
                <div id="validationSummary" class="alert alert-danger d-none"></div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserID" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="UserID" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastName" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Role" class="col-form-label col-4 h6"></label>
            <div class="col-8">
                <select asp-for="Role" asp-items="Model.RolesSelectListItems" class="form-control">
                    <option value=""></option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="Title" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EmailAddress" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="EmailAddress" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="Color" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CalendarName" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="CalendarName" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-form-label col-sm-4 h6"></label>
            <div class="col-sm-8">
                <input asp-for="PhoneNumber" type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
    </div>
</form>